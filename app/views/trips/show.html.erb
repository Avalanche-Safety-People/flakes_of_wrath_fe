<main>
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center card-bg">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-4 fw-normal">Your trip</h1>
      <p class="lead fw-normal"><%= @trip.name %></p>
      <p class="lead fw-normal"><%= @trip.start_date.strftime('%B %d, %Y') %></p>
      <p class="lead fw-normal"><%= @trip.description %></p>
      <%= button_to "Edit #{@trip.name}", edit_users_trip_path(@trip.id), class: "btn btn-outline-secondary", method: :get %>
    </div>
  </div>

  <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
    <div class="bg-light me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="my-3 p-3">
        <%= render 'shared/area_detailed' %>
      </div>

    </div>
  </div>

  <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
    <div class="bg-light me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="my-3 p-3">
        <%= render 'shared/upcoming_trips' %>
      </div>

    </div>
    <div class="bg-light me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="my-3 py-3">
   
        <%= render 'shared/zone_weather_forecast' %>
        
      </div>
    </div>
  </div>
</main>
